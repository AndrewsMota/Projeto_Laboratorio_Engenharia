@model App.ViewModels.EspecieViewModel
@{
    ViewData["Title"] = "Adicionar Espécie";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <hr />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BioterioId" class="control-label"></label>
                <select asp-for="BioterioId" class="form-control" asp-items="@(new SelectList(Model.Bioterios, "Id", "Nome"))"></select>
                <span asp-validation-for="BioterioId" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" asp-action="Adicionar">Adicionar</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

