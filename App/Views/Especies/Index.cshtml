@model IEnumerable<App.ViewModels.EspecieViewModel>

@{
    ViewData["Title"] = "Espécies";
}

<h1>Espécies</h1>
<hr />
<br />
<p supress-by-role-name="Admin">
    <a class="btn btn-info" asp-controller="Especies" asp-action="Adicionar">Nova Espécie</a>
    <hr />
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Nome
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var especie in Model)
        {
            <tr style="background-color: #f7f7f7 ">
                <td>
                    @Html.DisplayFor(modelItem => especie.Nome)
                </td>
                <td></td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@especie.Id">Biotérios</a>
                </td>
            </tr>
        }
    </tbody>
</table>
