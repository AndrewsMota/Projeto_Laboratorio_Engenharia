@model IEnumerable<Business.Models.Bioterio>

@{
    ViewData["Title"] = "Biotérios";
}

<h1>Biotérios</h1>
<hr />
<br />
<p supress-by-role-name="Admin">
    <a class="btn btn-info" asp-controller="Bioterios" asp-action="Adicionar">Novo Biotério</a>
    <hr />
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Nome
            </th>
            <th>
                CNPJ
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bioterio in Model)
        {
            <tr style="background-color: #f7f7f7 ">
                <td>
                    @Html.DisplayFor(modelItem => bioterio.Nome)
                </td>
                <td>
                    @this.FormataCnpj(bioterio.Cnpj)
                </td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@bioterio.Id">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
