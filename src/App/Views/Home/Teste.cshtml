@model App.ViewModels.ProtocoloViewModel
@{
    ViewData["Title"] = "Emitir Protocolo";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <hr />
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Especie</th>
                        <th>Quantidade</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Nome</td>
                        <td>Quantidade</td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td>
                            <input class="btnAdd btn btn-default" type="button" name="name" value="Add" />
                        </td>
                    </tr>
                </tfoot>
            </table>
            <button class="btn btn-primary" asp-action="Adicionar">Adicionar</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    $(".btnAdd").click(function () {
        var td1 = '<td>Nome</td>';
        var td2 = '<td>Quantidade</td>';
        $("tbody").append('<tr>' + td1 + td2 + '</tr>');
    });
    </script>
}

