@model IEnumerable<Business.Models.ApplicationUser>

@{
    ViewData["Title"] = "Secretárias";
}

<h1>Secretárias</h1>
<hr />
<br />
<p supress-by-role-name="Admin">
    <a class="btn btn-info" asp-controller="Secretarias" asp-action="Adicionar">Nova Secretária</a>
    <hr />
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Nome Completo
            </th>
            <th>
                CPF
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr style="background-color: #f7f7f7 ">
                <td>
                    @Html.DisplayFor(modelItem => usuario.UserInfo.NomeCompleto)
                </td>
                <td>
                    @this.FormataCpf(usuario.UserInfo.Cpf)
                </td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@usuario.Id">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
